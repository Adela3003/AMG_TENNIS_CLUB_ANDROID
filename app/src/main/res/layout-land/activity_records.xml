<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordsActivity"
    android:background="#E2D1F9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/records"
        android:text="This is the list of our records : "
        android:textSize="18dp"
        android:textColor="#317773"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:id="@+id/recyclerview"
        android:layout_below="@id/records"/>

    <Button
        android:id="@+id/backToHome"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Back to home page"
        android:backgroundTint="#317773"
        android:textColor="#E2D1F9" />

</RelativeLayout>