<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2D1F9"
    tools:context=".FormInscriere">


    <TextView
        android:id="@+id/fillIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Fill in this form"
        android:textColor="#317773"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/numeForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fillIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeForm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical|center"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/emailForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Enter Email"
        android:text="Email"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailForm"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|center"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/ageForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Enter Your Age"
        android:text="Age"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageForm"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center"
        android:hint="Enter Your Age"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@id/editAge"
        android:layout_marginTop="15dp"
        android:text="Add"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#317773"
        android:textColor="#E2D1F9" />

</RelativeLayout>